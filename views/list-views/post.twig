<a href="{{ p.link }}" class="post__item">
{% if p.thumbnail %}
  <div class="post__item__media">
    <img src="{{p.thumbnail.src('medium')}}" alt="{{p.thumbnail.alt}}">
  </div>
{% endif %}
  <h3 class="post__item__title">{{ p.title }}</h3>
  <div class="post__item__link" class="btn">{{fn('pll_e', 'Read More')}}</div>
</a>