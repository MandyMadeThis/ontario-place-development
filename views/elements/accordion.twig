{% if user or post.post_status =='publish' %}
  <ul class="accordion__wrapper">
    {% for detail in accordion %}
      <li class="accordion">
        <div class="container">
          <div class="accordion__header">
            <h3 class="accordion__title">{{detail.label}}</h3>
          </div>
          <div class="accordion__content">{{ detail.content }}</div>
        </div>
      </li>
    {% endfor %}
  </ul>
{% endif %}